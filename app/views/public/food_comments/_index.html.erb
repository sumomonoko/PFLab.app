<table class="table table-borderless border">
  <tbody>
    <% food.food_comments.order(created_at: :desc).each do |food_comment| %>
    <tr class="col-md-12">
      <td class="col-md-1">
        <%= link_to user_path(food_comment.user) do %>
          <%= image_tag food_comment.user.get_image(50,50), class: 'rounded-circle' %><br>
          <%= food_comment.user.name %>
        <% end %>
      </td>
      <td class="col-md-9">
        <span class="text-info"><%= food_comment.created_at.strftime("%Y/%m/%d %H:%M") %></span><br>
        <%= food_comment.body %>
      </td>
      <td class="col-md-2 align-middle">
        <% if food_comment.user == current_user %>
          <%= link_to "削除する", food_comment_path(food, food_comment), method: :delete, remote: true, data: { confirm: '本当にこのコメントを削除しますか？' }, class: "btn btn-sm btn-danger float-end" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>